{
  "name": "$__appName",
  "version": "1.0.0",
  "description": "",
  "main": "./src/bootstrap.js",
  "scripts": {
    "start": "node src/bootstrap.js",
    "test": "./node_modules/.bin/jest --config=jest.config.js",
    "test:watch": "./node_modules/.bin/jest --watch --config=jest.config.js",
    "test:coverage": "./node_modules/.bin/jest --coverage --collectCoverageFrom=src/**/*.js",
    "precommit": "lint-staged",
    "dev": "./node_modules/.bin/nodemon --inspect=0.0.0.0:19100 src/bootstrap.js",
    "lint": "./node_modules/.bin/eslint src",
    "lintfix": "./node_modules/.bin/eslint src --fix",
    "format": "./node_modules/.bin/prettier --write './src/**/*.js'"
  },
  "author": "Hieu Le Minh <hieulm@live.com>",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "ignore": [
      "package.json",
      ".vscode/*.*",
      ".eslintrc.json"
    ],
    "linters": {
      "*.{js,jsx}": [
        "eslint --no-ignore --fix",
        "git add --force"
      ],
      "*.{json,md,graphql}": [
        "prettier --write",
        "git add --force"
      ]
    }
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.6",
    "prettier": "^1.15.2"
  },
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "ajv": "^6.5.5",
    "amqplib": "^0.5.3",
    "axios": "^0.18.0",
    "config": "^3.0.1",
    "event-stream": "^4.0.1",
    "http-errors": "^1.7.1",
    "jsonwebtoken": "^8.4.0",
    "koa": "^2.6.2",
    "koa-body": "^4.0.4",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.0.0",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "moment": "^2.24.0",
    "mongodb": "^3.1.10",
    "pg": "^7.6.1",
    "ramda": "^0.26.1",
    "redis": "^2.8.0",
    "winston": "^3.1.0"
  }
}
